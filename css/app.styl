.prompt-btn
  background-color: yellow
  font-size 16px
  border none
  border-radius 6px
.prompt
  position fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  background-color: yellow
  padding 40px 20px
  z-index 10
