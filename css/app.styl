.position-relative
  position relative

.bg
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index -1
  background-color: rgba(255, 255, 255, 0.63)
button
  &:active
  &:hover
  &:focus
    outline none

.section
  visibility hidden
  display block
  opacity 0
  //height 0
  transition opacity 0.75s
  &.show
    visibility visible
    opacity 1
    height auto
.proverka
  font-family FAZINGSONE, sans-serif
  font-size 30px
#a
  .view
    right 50%
    &:after
      left 90%
#b
  .view
    left 50%
    &:after
      right 90%
.view {
    position: absolute;
    background: yellow;
    bottom: 100%;
    padding: 0 5px;
    border: 2px solid yellow;
    border-radius: 5px;
  }
.view:after {
  top: 100%;
  border: solid transparent;
  content: " ";
  height: 0;
  width: 0;
  position: absolute;
  pointer-events: none;
  border-color: rgba(0, 213, 114, 0);
  border-top-color: yellow;
  border-width: 10px;
  margin-left: -10px;
}
.btn-numbers
  .btn-options
    transform: translateY(0px);
    border none
    font-family 'Nunito', sans-serif;
    border-radius 6px
    background-color: red
    color #fff
    transition transform 0.75s
    &:hover
      transform: translateY(-30px);
    &:nth-child(odd)
      background-color: blueviolet
    &:nth-child(3n)
      background-color: yellow
.centered-block
  position absolute
  font-family 'Nunito', sans-serif;
  font-size 32px
  top: 50%
  left: 50%
  max-width 700px
  width 100%
  min-width 300px
  text-align center
  transform translate(-50%, -50%)
  h1
    i
      font-style normal
      color #E7CA00
      &:nth-child(even)
        color red
      &.blue
        color blue

.start-btn
  color #ffff
  background-color: #47B901
  border-radius 6px
  border none
  font-family 'Nunito', sans-serif;
  box-shadow inset 0 0 30px 10px green
  text-decoration none
  padding: 5px 10px
  display inline-block
  &.red-btn
    background-color: #FF0000;
    box-shadow: inset 0 0 30px 10px #CA0000;
  &.blue-btn
    background-color: #0000FF;
    box-shadow: inset 0 0 30px 10px #00009B;
  &.black-btn
    background-color: #333;
    box-shadow: inset 0 0 30px 10px #000;
  &.default-btn
    background-color: #e1e1e1;
    box-shadow: inset 0 0 30px 10px #999;
  &:active
    box-shadow inset 0 0 40px 0px green

.results
  display inline-block
.mistake
  color red
.game
  .number
    display inline-block
  #result
  #eq
  #ch
    font-family'Nunito', sans-serif;
    display inline-block
    text-align center
  #a
  #b
  #result
    max-width 330px
    display inline-block
    text-align center
