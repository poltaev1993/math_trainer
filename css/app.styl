#result
  position: relative
  max-width 330px
  display inline-block
  font-size 120px
  text-align center
  .view
    bottom auto
    top 100%
    &:after
      top: auto
      bottom: 100%
      border-top-color transparent
      border-bottom-color #ff0
.view
    font-family FAZINGSONE, sans-serif
    font-size 48px

.hello-words
  position relative
  text-align left
  display inline-block
  .option-cloud
    position absolute
    top: 0
    left: 105%
    width 100%
    background-color: #e1e1e1
    padding: 10px
    border-radius 6px

    &:after
      right: 100%;
      top: 50%;
      border: solid transparent;
      content: " ";
      height: 0;
      width: 0;
      position: absolute;
      pointer-events: none;
      border-color: rgba(136, 183, 213, 0);
      border-right-color: #e1e1e1
      border-width: 10px;
      margin-top: -10px;

body
  .option-bg
    background-image: url(../img/option-bg.jpg)
    background-size 100%
    background-repeat: no-repeat
#option-slider
  padding-bottom: 80px
body
  .swiper-nav
    bottom 0px
    top auto
    width: 87px;
    height: 24px;
    font-size 18px
    z-index 100
    &.swiper-button-prev
      background: none
      right 50%
      left auto
      margin-right 10px
    &.swiper-button-next
      background: none
      left 50%
      right auto

.next__js
  position fixed
  left 50%
  transform translateX(-50%)
  font-size 24px

.sound
  position: fixed
  cursor pointer
  /*width 50px
  height 50px*/
  border-radius 50%
  background-color: #F28D8D
  transition background-color 0.75s
  &.turn-off
